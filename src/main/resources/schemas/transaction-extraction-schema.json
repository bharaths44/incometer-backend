{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TransactionExtraction",
  "type": "object",
  "required": ["amount", "category", "payment_method", "date"],
  "additionalProperties": false,
  "properties": {
    "amount": {
      "type": "number",
      "minimum": 0.01
    },
    "category": {
      "type": ["string", "null"]
    },
    "payment_method": {
      "type": ["string", "null"]
    },
    "date": {
      "type": ["string", "null"],
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    }
  }
}


